{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PaperTalk",
  "version": "0.1.0",
  "identifier": "com.papertalk.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build", 
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "PaperTalk",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {
      "all": true,
      "readFile": true,
      "writeFile": true,
      "readDir": true,
      "copyFile": true,
      "createDir": true,
      "removeDir": true,
      "removeFile": true,
      "renameFile": true,
      "exists": true
    },
    "os": {
      "all": true
    },
    "window": {
      "all": true,
      "close": true,
      "hide": true,
      "show": true,
      "maximize": true,
      "minimize": true,
      "unmaximize": true,
      "unminimize": true,
      "startDragging": true
    },
    "http": {
      "all": true,
      "request": true,
      "scope": ["http://127.0.0.1:11434/*"]
    }
  }
}
